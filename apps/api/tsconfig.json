{
   "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "emitDecoratorMetadata": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "dist",
      "resolveJsonModule": true,
      "sourceMap": true,
      "target": "es6"
   },
   "exclude": [
      "node_modules"
   ],
   "include": [
      "src/**/*.ts"
   ]
}